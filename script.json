{
  "codice": "from http.server import HTTPServer, BaseHTTPRequestHandler
import socket

HTTPhost = socket.gethostbyname(socket.gethostname())
HTTPport = 8080

class HTTPSERVER(BaseHTTPRequestHandler):
    def do_GET(self):
        self.send_response(200)
        self.send_header("Content-type", "text/html")
        self.end_headers()

http_server = HTTPServer((HTTPhost, HTTPport), HTTPSERVER)
print(f"Server start at http://{HTTPhost}:{HTTPport}")
http_server.serve_forever()
http_server.server_close()"

}
